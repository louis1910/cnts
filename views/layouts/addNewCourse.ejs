<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ADD DOCUMENT</title>
    <link rel="stylesheet" href="/css/layouts.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400i,600,700,700i&display=swap" rel="stylesheet">
</head>
<body>
    <!-- <% if(message){ %> -->
        <!-- <script type="text/javascript"> alert( "message" ) </script> -->
    <!-- <% } %> -->
    <div class="wrap">
        <div class="banner">
            <div class="menu-block">
                <div class="banner-left">
                    <div class="banner-title"><p>Cẩm Nang Tuyển Sinh</p></div>
                    <div class="banner-admin"><p>Administrator</p></div>
                </div>
            </div>
            <div class="banner-right">

            </div>
        </div>
        <div class="half-wrap">
            <div class="side-left">
                <div class="side-left-title home">
                    <div class="side-img">
                        <img src="../img/icons/user.png" alt="admin" class="img-admin">
                    </div>
                    <div class="tooltip">
                        <span class="tooltiptext">Hello, Administrator!</span>
                    </div>
                </div>
                <a href="/" class="side-list home">
                    <div class="home-img"><img src="../img/icons/home.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Trang Chủ</span>
                    </div>
                </a>
                <a href="/member" class="side-list home">
                    <div class="home-img"><img src="../img/icons/member-card.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Quản lý thành viên</span>
                    </div>
                </a>
                <a href="/inventory" class="side-list home">
                    <div class="home-img"><img src="../img/icons/file-management.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Quản lí kho tài liệu</span>
                    </div>
                </a>
                <a href="/add-new-course" class="side-list home active-item">
                    <div class="home-img"><img src="../img/icons/add-file.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Thêm tài liệu mới</span>
                    </div>
                </a>
                <a href="/add-new-document" class="side-list home">
                    <div class="home-img"><img src="../img/icons/add.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Thêm văn bản mới</span>
                    </div>
                </a>
                <a href="http://mail.google.com" class="side-list home">
                    <div class="home-img"><img src="../img/icons/email.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Hộp thư</span>
                    </div>
                </a>
                <a href="/ads" class="side-list home">
                    <div class="home-img"><img src="../img/icons/ads.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Banner quảng cáo</span>
                    </div>
                </a>
                <a href="/feedback" class="side-list home">
                    <div class="home-img"><img src="../img/icons/rating.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Cảm nhận khách hàng</span>
                    </div>
                </a>
                <a href="/settings" class="side-list home">
                    <div class="home-img"><img src="../img/icons/settings.svg" alt=""></div>
                    <div class="tooltip">
                        <span class="tooltiptext">Thiết lập website</span>
                    </div>
                </a>
            </div>
            <div class="side-right">
                <div class="wrap-form">
                    <div class="form-sum">
                        <p class="form-title">Thêm tài liệu mới</p>
                    </div>
                    <div class="wrapper-welcome">
                        <div class="form-inline overlay">
                            <form method="POST" enctype="multipart/form-data">
                                <div class="form-element">
                                    <div><p>Chọn môn học:</p></div>
                                    <div>
                                        <select name="subject">
                                            <option value="none">...</option>
                                            <option value="math">Toán</option>
                                            <option value="literature">Ngữ Văn</option>
                                            <option value="english">Tiếng Anh</option>
                                            <option value="history">Lịch Sử</option>
                                            <option value="chemistry">Hóa Học</option>
                                            <option value="biological">Sinh Học</option>
                                            <option value="physical">Vật Lý</option>
                                            <option value="civic">Giáo Dục Công Dân</option>
                                            <option value="geography">Địa Lý</option>
                                            <option value="other">Khác</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-element">
                                    <div><p>Chọn khối học:</p></div>
                                    <div>
                                        <select name="grade">
                                            <option value="none">...</option>
                                            <option value="1">Lớp 1</option>
                                            <option value="2">Lớp 2</option>
                                            <option value="3">Lớp 3</option>
                                            <option value="4">Lớp 4</option>
                                            <option value="5">Lớp 5</option>
                                            <option value="6">Lớp 6</option>
                                            <option value="7">Lớp 7</option>
                                            <option value="8">Lớp 8</option>
                                            <option value="9">Lớp 9</option>
                                            <option value="10">Lớp 10</option>
                                            <option value="11">Lớp 11</option>
                                            <option value="12">Lớp 12</option>
                                            <option value="university">Đại Học</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-element">
                                    <p>Upload tài liệu</p>
                                    <input type="file" name="filename">
                                </div>
                                <div class="form-element">
                                    <p>Tiêu đề</p>
                                    <input class="form-input" type="text" name="title">
                                </div>
                                 <div class="form-element">
                                    <p>Mô tả:</p>
                                    <input class="form-input form-des" type="text" name="description">
                                </div>
                                <div class="form-button">
                                    <input class="submit-button" type="submit" value="Lưu">
                                    <input class="submit-button" type="submit" value="Hủy">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="js/main.js"></script>
</body>
</html>