<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
<!--     <link href="https://fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&display=swap" rel="stylesheet"> -->
    <link href="https://fonts.googleapis.com/css?family=Darker+Grotesque:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/register.css">
    <title>Register</title>
</head>
<body>
<section class="main-block">
    <div class="custom-bg">
        <div class="overlay-bg">
            <div class="both">
                <div class="right">
                    <form class="form-block" method="post">
                        <% if(typeof(err) != 'undefined') {%>
                        <div class="form-wrapper">
                            <h1 class="mega-title">Đăng kí</h1>
                            <div class="ip">
                                <label for="name" class="ip-subtitle">Name</label>
                                <input type="text" id="name" name="name" class="ip-block ip-fx1" value="<%= values.name %>">
                            </div>

                            <div class="ip">
                                <label for="email" class="ip-subtitle">Email</label>
                                <input type="text" id="email" name="usermail" class="ip-block ip-fx1" value="<%= values.usermail %>">
                            </div>

                            <div class="ip">
                                <label for="password" class="ip-subtitle">Password</label>
                                <input type="password" id="password" name="password" class="ip-block ip-fx2">
                            </div>

                            <div class="ip">
                                <label for="retype" class="ip-subtitle">Confirm Password</label>
                                <input type="password" id="retype" name="retype" class="ip-block ip-fx2">
                            </div>

                            <div class="btn-login-block">
                                <div class="fea-password">
                                    <a href="#">Forget password?</a>
                                    <a href="#">Have an account? Login now!</a>
                                </div>
                                <input type="submit" class="btn-login" value="Register">
                            </div>
                            <div class="termGeneral">
                                <div class="term-item">
                                    <a href="#">Trang chủ</a>
                                </div>
                                <div class="term-item">
                                    <a href="#">Quyền riêng tư</a>
                                </div>
                                <div class="term-item">
                                    <a href="#">Chính sách</a>
                                </div>
                                <div class="term-item">
                                    <a href="#">Liên hệ</a>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </form>

                </div>
                <div class="left">
                    <div class="banner">

                    </div>
                </div>


            </div>


        </div>

    </div>
</section>
<script type="text/javascript">
    <% if(err) { %>
        alert("<%= err[0] %>" || '');
    <% } %>

</script>
</body>
</html>